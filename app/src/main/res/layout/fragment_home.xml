<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sch.smktelkom_mlg.privateassignment.xirpl130.superheromovies.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:src="@drawable/ic_header" />

        <TextView
            android:id="@+id/Menu"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/gambar"
            android:gravity="center"
            android:text="List of Movies :"
            android:textColor="@color/colorWt"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Menu"
            android:gravity="center"
            android:text="Avengers"
            android:textColor="@color/colorWt"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Menu"
            android:gravity="center"
            android:text="Batman"
            android:textColor="@color/colorWt"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Menu"
            android:gravity="center"
            android:text="Captain America"
            android:textColor="@color/colorWt"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Menu"
            android:gravity="center"
            android:text="Spiderman"
            android:textColor="@color/colorWt"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Menu"
            android:gravity="center"
            android:text="Superman"
            android:textColor="@color/colorWt"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Menu"
            android:gravity="center"
            android:text="Wolverine"
            android:textColor="@color/colorWt"
            android:textSize="20dp" />

    </LinearLayout>

</FrameLayout>
